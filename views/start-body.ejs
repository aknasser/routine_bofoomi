            <div class="bonus"> 
                <label>Ton sport préféré ?
                    <select name="sportFavori1">
                        <option class="groupe-option">Sport Collectif</option>
                        <% for(let i = 0; i < sportCo.length; i++) { %>
                            <option value="<%= sportCo[i] %>"><%= sportCo[i] %></option>
                        <% }; %>
