<div class="grid-start">
    <div class="titleimage1">
        <h2>Modifier Bucket List</h2>
    </div>
    <div class="id2">
        <form action="/admin/modifyElement/<%=schema %>/<%=element.id %>" method="POST">

        <label>Title
            <input type="text" name="title" value="<%=element.title %>" required>
        </label>
        <div id="lesSteps">
            <% for(let i = 0; i < element.steps.length; i++) { %>
            <label>Step
                <input type="text" name="steps" value="<%=element.steps[i] %>" required>
            </label>
            <% } %>
        </div>

            <input class="button" type="button" id="BoutonStep"  value="ajouter step">


            <select name="category">
                <option class="groupe-option" value="<%=element.category %>"> <%=element.category %></option>
                <% for(let i = 0; i < sections.length; i++) { %>
                    <option value="<%= sections[i].name %>"><%= sections[i].name %></option>
                <% }; %>
            </select>
           
           
            <input class="button" type="submit" value="SUIVANT">
        </form>
    </div>
</div>

<script type="text/javascript" src="/js/ajoutStep.js"></script> <!-- JS POUR LE FRONT JS  -->
