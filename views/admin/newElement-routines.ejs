<div class="grid-start">
    <div class="titleimage1">
        <h2>Nouvelle Routine</h2>
    </div>
    <div class="id2">
        <form action="/admin/ajout/<%=element.nameLink%>" method="POST">
            <label>Title
                <input type="text" name="title" required>
            </label>
            <label>Description
                <input type="text" name="description" required>
            </label>
            <label>Conseil
                <input type="text" name="advice" required>
            </label>
            <label>Time (en minutes)
                <input type="text" name="time" required>
            </label>
            <select name="code_goal">
                <option class="groupe-option">Code_Goal</option>
                <% for(let i = 0; i < sections.length; i++) { %>
                    <option class="groupe-option"><%= sections[i].name %></option>
                    <% for(let j = 0; j < sections[i].code_goal.length; j++) { %>
                        <option value="<%= sections[i].code_goal[j] %>"><%= sections[i].code_goal[j] %></option>
                    <% }; %>
                <% }; %>
            </select>
            <select name="category">
                <option class="groupe-option">Categorie de référence</option>
                <% for(let i = 0; i < sections.length; i++) { %>
                    <option value="<%= sections[i].name %>"><%= sections[i].name %></option>
                <% }; %>
            </select>

           
            <input class="button" type="submit" value="SUIVANT">
        </form>
    </div>
</div>
